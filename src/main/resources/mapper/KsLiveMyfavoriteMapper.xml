    <insert id="insertKsLiveMyfavoriteByList" parameterType="List">
        insert into ks_live_myfavorite
        (ks_anchor_name ,ks_anchor_id ,ks_anchor_header_url ,description,is_myfavorite,update_time)
        values
        <foreach collection="list" index="index" item="i" separator=",">
            (#{i.ksAnchorName},#{i.ksAnchorId},#{i.ksAnchorHeaderUrl},#{i.description},#{isMyfavorite},#{updateTime})
        </foreach>
    </insert>

    <update id="updateKsLiveMyfavoriteByid">
        update ks_live_myfavorite
        <set>
            <if test="ksAnchorName != null">
                ks_anchor_name = #{ksAnchorName},
            </if>
            <if test="ksAnchorId != null">
                ks_anchor_id = #{ksAnchorId},
            </if>
            <if test="ksAnchorHeaderUrl != null">
                ks_anchor_header_url = #{ksAnchorHeaderUrl},
            </if>
            <if test="description != null">
                description = #{description}
            </if>
            <if test="isMyfavorite != null">
                is_myfavorite = #{isMyfavorite}
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime}
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteMyfavoriteByid">
        delete from ks_live_myfavorite where id = #{id}
    </delete>
</mapper>
