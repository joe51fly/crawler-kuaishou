    <select id="getKsLiveMyfavorite" resultType="ksLiveMyfavorite" parameterType="Integer">
        select * from ks_live_myfavorite where id = #{id}
    </select>

    <select id="getKsLiveMyfavoriteByAnchorId" resultType="ksLiveMyfavorite" parameterType="Integer">
        select * from ks_live_myfavorite where ks_anchor_id = #{ksAnchorId}
    </select>

    <select id="getAll" resultType="ksLiveMyfavorite">
        select * from ks_live_myfavorite
    </select>

    <insert id="insertKsLiveMyfavorite" parameterType="ksLiveMyfavorite" useGeneratedKeys="true" keyProperty="id">
        insert into ks_live_myfavorite(ks_anchor_name,ks_anchor_id,ks_anchor_header_url,description,is_myfavorite,update_time)
        values (#{ksAnchorName},#{ksAnchorId},#{ksAnchorHeaderUrl},#{description},#{isMyfavorite},#{updateTime})
    </insert>
